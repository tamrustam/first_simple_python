import random
from time import sleep
answers = ['Бесспорно', 'Мне кажется - да', 'Пока неясно, попробуй снова',
           'Даже не думай', 'Предрешено', 'Вероятнее всего', 'Спроси позже',
           'Мой ответ - нет', 'Никаких сомнений', 'Хорошие перспективы',
           'Лучше не рассказывать', 'По моим данным - нет', 'Определённо да',
           'Можешь быть уверен в этом', 'Да', 'Переформулируй и спроси опять',
           'Весьма сомнительно', 'Перспективы не очень хорошие',
           'Сейчас нельзя предсказать', 'Знаки говорят - да']
thinks = ['Дай подумать..', 'Хмм', 'Ну, мне кажется..', 'Я думаю, что..',
         'Вопрос непростой..', 'Мне нужно время, чтобы подумать!', 'Нууууу...']

print(f'''Привет, я магический шар,
и я знаю ответ на любой твой вопрос''')
sleep(1)
us_name = input('\nКак тебя зовут, друг?\n').lower().title()
sleep(0.25)
print(f'\nРад знакомству!')
sleep(0.5)

def que_ans():
    while True:
        question = input(f'{us_name}, что бы тебе хотелось у меня узнать?\n')
        sleep(0.15)
        think = random.choice(thinks)
        print(think)
        sleep(0.9)
        answer = random.choice(answers)
        print(answer)
        sleep(0.2)
        ask2 = input('\nЕсть ли у тебя ко мне еще вопрос? (да/нет)\n')
        sleep(0.2)
        if ask2 in ['y', 'yes', 'lf', 'да', 'д', 'нуы']:
            continue
        else:
            print(f'Ладно, {us_name}, удачи тебе!')
            break

que_ans()
